{
  "manifest_version": 2,
  "name": "Detox",
  "description": "Keep your browsing free from sensitive content.",
  "version": "1.0",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.min.js", "js/vendor.js", "js/content_script.js"]
    }
  ],
  "background": {
    "scripts": [ "js/vendor.js", "js/background.js"]
  },
  "permissions": [
    "storage",
    "contextMenus",
    "<all_urls>",
    "tabs",
    "https://*/*",
    "http://*/*"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
